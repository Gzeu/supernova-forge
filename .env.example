# MultiversX Network Configuration
# Possible values: devnet, testnet, mainnet
NEXT_PUBLIC_MULTIVERSX_NETWORK=devnet

# WalletConnect V2 Project ID
# Get this from https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id_here

# API Configuration
NEXT_PUBLIC_MULTIVERSX_API_URL=https://devnet-api.multiversx.com
NEXT_PUBLIC_MULTIVERSX_GATEWAY_URL=https://devnet-gateway.multiversx.com

# Optional: Custom RPC endpoint
# NEXT_PUBLIC_MULTIVERSX_RPC_URL=https://devnet-api.multiversx.com

# Development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Analytics (Optional)
# NEXT_PUBLIC_GA_ID=
# NEXT_PUBLIC_MIXPANEL_TOKEN=

# Sentry (Optional)
# SENTRY_DSN=
# SENTRY_ORG=
# SENTRY_PROJECT=

# Database (Optional - for future features)
# DATABASE_URL=

# Third-party APIs (Optional)
# OPENAI_API_KEY=
